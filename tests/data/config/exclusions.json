{
  "directories": {
    "logging_directory": "TESTDATADIR/ri_pv_reV2",
    "output_directory": "TESTDATADIR/ri_pv_reV2"
  },
  "exclusions": [
    {
      "band": 1,
      "classes_exclude": [
        1
      ],
      "fpath": "/projects/rev/data/ri/ri_padus.tif",
      "name": "PAD-US",
      "type": "Protected"
    },
    {
      "band": 1,
      "classes_exclude": [
        2,
        3
      ],
      "fpath": "/projects/rev/data/ri/ri_smod.tif",
      "name": "GHSL Urban Areas",
      "type": "Urban"
    },
    {
      "band": 1,
      "fpath": "/projects/rev/data/ri/ri_srtm_slope.tif",
      "max_thresh": 5,
      "name": "SRTM Slope",
      "type": "Slope"
    }
  ],
  "execution_control": {
    "allocation": "rev",
    "nodes": 1,
    "option": "local",
    "ppn": 2,
    "sites_per_core": 10
  },
  "project_control": {
    "analysis_years": 2012,
    "logging_level": "DEBUG",
    "name": "rev",
    "output_request": [
      "cf_mean",
      "cf_profile",
      "lcoe"
    ],
    "technology": "pv"
  }
}
